[Unit]
Description=WSO2 EI
After=network.target

[Service]
ExecStart={{ micro_integrator_home }}/bin/micro-integrator.sh start
ExecStop={{ micro_integrator_home }}/bin/micro-integrator.sh stop
ExecRestart={{ micro_integrator_home }}/bin/micro-integrator.sh restart
PIDFile={{ micro_integrator_home }}/wso2carbon.pid
User={{ wso2_user }}
Group={{ wso2_group }}
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
